@model WebApplication1.Models.Product
@{
    ViewBag.Title = "Редактирование данных о продукте";
}
<form asp-action="edit" asp-controller="home" method="post" asp-route-id="@Model.ID">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название продукта</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>

    <input type="submit" value="Сохранить" class="btn btn-default" />
</form>